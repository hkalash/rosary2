<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transitions_container_path"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="0dp">

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-8537373371656761/2056587433"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent"></com.google.android.gms.ads.AdView>

    <include
        layout="@layout/button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="150dp" />

    <TextView
        android:id="@+id/tv_path_text"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="130dp"
        android:gravity="center"
        android:textColor="@color/three" />

    <Button
        android:id="@+id/tv_counter_3"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/line_square_gold"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="28sp" />

</FrameLayout>