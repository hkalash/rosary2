<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Progress_Mode.ProgressBar_Mode">

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/line_square_blue"
        android:text="@string/reset_counter"
        android:textColor="@color/primary_text"
        android:textSize="18sp" />

    <Button
        android:id="@+id/tv_counter_2"

        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/line_square_gold"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="28sp" />

    <ProgressBar

        android:id="@+id/circularProgressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="620dp"
        android:layout_below="@+id/btn_reset"
        android:layout_marginTop="-2dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/circular_prograss"
        android:secondaryProgress="100" />


    <Button
        android:id="@+id/btn_progress"
        style="Null"
        android:layout_width="match_parent"
        android:layout_height="573dp"
        android:layout_above="@+id/adView3"
        android:layout_below="@+id/btn_reset"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="-1dp"
        android:background="@android:color/transparent"
        android:maxWidth="200dip"
        android:textAlignment="center"
        android:textColor="@color/three"
        android:textSize="18sp" />
    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-8537373371656761/2056587433"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent"
        ></com.google.android.gms.ads.AdView>

</RelativeLayout>